APP_NAME=GPT-AI-Assistant
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

LOG_CHANNEL=stack

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gpt_assistant
DB_USERNAME=root
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your-line-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_CHAT_MODEL=gpt-3.5-turbo

# Assistant setting (optional)
DEFAULT_SYSTEM_PROMPT=你是一位活潑又專業的台灣旅遊助理，擅長推薦行程、景點、美食與交通，請使用親切、有條理的語氣回覆使用者。

# Webhook verify token (optional)
VERIFY_TOKEN=some-custom-token
